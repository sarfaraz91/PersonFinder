<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10ssp"
    android:layout_marginTop="@dimen/_5ssp"
    android:layout_marginEnd="@dimen/_10ssp"
    android:layout_marginBottom="@dimen/_5ssp"
    android:elevation="@dimen/_2ssp"
    app:cardCornerRadius="@dimen/_3ssp">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/primaryLightColor"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_15ssp">

            <TextView
                android:id="@+id/vendorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5ssp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Kashif Abbasi"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />


            <LinearLayout
                android:id="@+id/companyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vendorTitle"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="asdasd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:ellipsize="end"
                    android:maxLines="1"

                    android:text="Stark Industries"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyContainer"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="one@one.com"
                    android:textColor="@color/dark_gray"

                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailContainer"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="contact"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="+92365658560"
                    android:textColor="@color/dark_gray"

                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contactContainer"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Active"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>